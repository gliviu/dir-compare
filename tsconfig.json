{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "build",
      "sourceMap": true,
      "strictNullChecks": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,
      "composite": true,
      "declarationMap": true,
      "esModuleInterop": true,
    },
    "files": [
      "./src/index.d.ts"
    ],
    "include": [
      "**/*.ts",
      "**/*.js",
      "package.json"
    ],
    "exclude": [
      "build",
      "test*.js",
      "test*.ts",
      "test/testdir",
      "coverage",
      "docs"
    ]
  }
